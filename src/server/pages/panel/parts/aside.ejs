<aside class="dark-mode">
  <div id="docsNav" class="offcanvas-lg offcanvas-start d-flex flex-column position-fixed top-0 start-0 vh-100 bg-dark border-end-lg" style="width: 21rem; z-index: 1045;">
    <div class="offcanvas-header d-none d-lg-flex justify-content-start">
      <a href="/panel" class="navbar-brand text-dark d-none d-lg-flex py-0">
        <img src="/img/icon.webp" width="47" alt="logo">
        RBL Panel
      </a>
    </div>
    <div class="offcanvas-header d-block d-lg-none border-bottom">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h5 class="d-lg-none mb-0">Menu</h5>
        <button type="button" class="btn-close d-lg-none" data-bs-dismiss="offcanvas" data-bs-target="#docsNav"></button>
      </div>
      <div class="list-group list-group-flush mx-n4">
        <a href="/panel" class="list-group-item list-group-item-action d-flex align-items-center border-0 py-2 px-4">
          Home
        </a>
      </div>
    </div>
    <div class="offcanvas-body p-4">
      <div class="swiper-wrapper">
        <div class="swiper-slide h-auto">
          <h2 class="fs-lg"><b>Content</b></h2>
          <hr style="margin-left:-20px;margin-right:-20px">
          <br>
          <div class="list-group list-group-flush mx-n4 pb-2">
            <% if (req.url == '/') { %>
            <a href="/panel" class="list-group-item list-group-item-action border-0 py-2 px-4 active"> Panel</a>
            <% } else { %>
            <a href="/panel" class="list-group-item list-group-item-action border-0 py-2 px-4"> Panel</a>
            <% } %>
            <% if (req.url == '/bots') { %>
            <a href="/panel/bots" class="list-group-item list-group-item-action border-0 py-2 px-4 active"> Revolt Bots</a>
            <% } else { %>
            <a href="/panel/bots" class="list-group-item list-group-item-action border-0 py-2 px-4"> Revolt Bots</a>
            <% } %>
            <% if (req.url == '/certification') { %>
            <a href="/panel/certification" class="list-group-item list-group-item-action border-0 py-2 px-4 active"> Certification </a>
            <% } else { %>
            <a href="/panel/certification" class="list-group-item list-group-item-action border-0 py-2 px-4"> Certification </a>
            <% } %>
            <% if (req.url == '/reports') { %>
            <a href="/panel/reports" class="list-group-item list-group-item-action border-0 py-2 px-4 active"> Reports</a>
            <% } else { %>
            <a href="/panel/reports" class="list-group-item list-group-item-action border-0 py-2 px-4"> Reports</a>
            <% } %>
            <% if (req.url == '/badges' && user.isAdmin) { %>
            <a href="/panel/badges" class="list-group-item list-group-item-action border-0 py-2 px-4 active"> Badges</a>
            <% } else if (user.isAdmin) { %>
            <a href="/panel/badges" class="list-group-item list-group-item-action border-0 py-2 px-4"> Badges</a>
            <% } %>
          </div>
        </div>
      </div>
      <div class="swiper-scrollbar end-0"></div>

    </div>
    <div class="offcanvas-header border-top">
      <a href="/" class="btn btn-secondary w-100" target="_blank" rel="noopener">
        &nbsp;Leave Panel
      </a>
    </div>
    <div class="offcanvas-header border-top">
      <a href="/auth/logout" class="btn btn-primary w-100" target="_blank" rel="noopener">
        <i class="bx bx-log-out fs-4 lh-1 me-1"></i>
        &nbsp;Sign Out
      </a>
    </div>
  </div>
</aside>