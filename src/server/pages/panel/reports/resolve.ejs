<html lang="en" class="dark-mode">

<head>
    <title>Resolving report from <%= report.reporterName %> - Staff Panel</title>
  <%- include('../parts/head.ejs') %>
</head>

<body>
  <%- include('../parts/aside.ejs') %>

  <!-- Page container -->
  <main class="docs-container pt-5 pb-3 pb-lg-4" style="padding-right: 0px;">
    <div class="container-fluid px-xxl-5 px-lg-4 pt-4 pt-lg-5 pb-4">
        <h2 class="ps-lg-2 ps-xxl-0 mt-2 mt-lg-0 pt-4 pb-2 mb-3 mb-xl-4">Resolve report from &nbsp;&nbsp;<img alt="<%= report.userName %>'s avatar" height="40px" width="40px" style="border-radius: 50%;" src="https://autumn.revolt.chat/avatars/<%= report.reporterAvatar._id %>/<%= report.reporterAvatar.filename %>">&nbsp;<%= report.reporterName %></h2>
        <form action="/panel/reports/resolve" method="POST">
          <div class="form-group">            
            <label for="notes">Notes</label><br>
            <input type="hidden" name="reporterId" value="<%= report.reporterId %>">
            <input type="hidden" name="userId" value="<%= report.userId %>">
            <input type="hidden" name="botId" value="<%= report.botId %>">
            <input type="hidden" name="type" value="<%= report.type %>">
            <textarea class="form-control" id="notes" name="notes" rows="3" maxlength="1900" placeholder="Anything that was important or notes about the incident for future references."></textarea>
          </div>
          <button type="submit" style="margin-top: 10px;" class="btn btn-danger"><i class="fa-solid fa-trash"></i>&nbsp;&nbsp;Resolve Report</button>
        </form>
    </div>
  </main>

</body>
<%- include('../../parts/footer.ejs') %>
<div class="modal-backdrop fade show d-none"></div>